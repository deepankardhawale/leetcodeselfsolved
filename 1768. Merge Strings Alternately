class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
        j = 0
        str1 = ''
        if len(word1)>len(word2):
            len_1 = len(word2)
            for i in range(len_1):
                str1 += word1[i]
                str1 += word2[i]
                j+=1
            str1 = str1 + word1[j:]
        elif len(word2)>len(word1):
            len_1 = len(word1)
            for i in range(len_1):
                str1 += word1[i]
                str1 += word2[i]
                j+=1
            str1 = str1 + word2[j:]
        else:
            for i in range(len(word1)):
                str1 += word1[i]
                str1 += word2[i]
                
        return str1
